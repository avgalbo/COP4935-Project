<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/browser_actions_bg_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="-120dp"
            android:src="@drawable/newlogosignin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="@string/Parent_Or_Child"
            android:textColor="@color/dot_inactive_screen3"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnParent"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/parentorchild_button"
            android:text="Parent"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnChild"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btnParent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/parentorchild_button"
            android:text="Child"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>